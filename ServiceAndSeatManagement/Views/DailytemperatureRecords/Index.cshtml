@model IEnumerable<ServiceAndSeatManagement.Models.ViewModel.DailyTemperatureRecordsViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int RowNumber = 1;
}

<nav class="navbar navbar-light bg-transparent">
    <a class="navbar-brand"></a>
    <form class="form-inline">
        <button class="form-control mr-sm-2 btn btn-primary" type="submit" asp-action="Export_To_Excel"><i class="fa fa-file-excel-o"> Export to Excel</i></button>
        <button id="btnPrint" name="Printform" class="btn btn-success my-2 my-sm-0" type="submit"><i class="fa fa-print"> Print report</i></button>
    </form>
</nav>
<br />
<div class="row">
    <div class="col-md-2 p-1 nowrap">
       
    </div>
    <div class="text-danger">
        <img width="100" height="100" alt="church_logo" src="~/img/AG_logo.png" />
    </div>
    <div class="col-md-6 text-center">
        <h4>Living Faith Assemblies of God Chapel</h4>
        <div>
            <p class="m-1">Post Office Box 385</p>
            <p class="m-1">Obuasi-West Municipal</p>
            <p class="m-1">Tel: +233546290555/+2330504898213</p>
        </div>
    </div>
</div>

<hr />
<div>
    <h5 class="text-dark text-center"><u>Attendance report</u></h5>
</div>
<div class="row">
    
    <div class="col-md-8">
        <p><b>No. of members:</b> @ViewBag.MemberTemperature</p>

    </div>
    <div class="col-md-4">
        <p><b>Date:</b> @DateTime.Now.ToLongDateString()</p>

    </div>
</div>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                S/No
            </th>

            <th>
               Name of member
            </th>
            <th>
                Gender
            </th>
            <th>
                Temperature
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @RowNumber
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberName)
            </td>
            @if (item.GenderId == 1)
            {
                <td>MALE</td>
            }
            else
            {
                <td>FEMALE</td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Temperature)
            </td>
            
        </tr>
    RowNumber = RowNumber + 1;
}
    </tbody>
</table>
<br />
<br />

@section Scripts{ 
    <script src="~/js/Printform.js"></script>
    
}