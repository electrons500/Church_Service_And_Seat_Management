@model IEnumerable<ServiceAndSeatManagement.Models.ViewModel.DepartmentViewModel>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

   

<br />

<div class="row">
    <div class="col-3 text-left">
        <h4>Departments</h4>
    </div>

    <div class="col text-center">
        <a style="margin:auto" asp-controller="Home" asp-action="Index">
            <h6><i class="fa fa-home text-dark"></i> Click to go back to Menu</h6>
        </a>
    </div>

    <div class="col-3 text-right" style="margin-bottom:10px">
        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"> Add new department</i></a>
    </div>
</div>

<table class="table  table-hover table-bordered table-striped">
    <thead class="bg-primary text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn btn-warning"><i class="fa fa-edit"> Edit department</i></a>
                    @* <a asp-action="Details" asp-route-id="@item.DepartmentId">Details</a> |*@
                    @*<a asp-action="Delete" asp-route-id="@item.DepartmentId">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
