@model IEnumerable<ServiceAndSeatManagement.Models.ViewModel.DepartmentViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />

    <div class="row">
        <div class="col-5">
            <h2>Departments</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Add new department</a>
        </div>
    </div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model =>model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn btn-warning">Edit department</a>
               @* <a asp-action="Details" asp-route-id="@item.DepartmentId">Details</a> |*@
               @*<a asp-action="Delete" asp-route-id="@item.DepartmentId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
