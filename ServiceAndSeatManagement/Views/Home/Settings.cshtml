
@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Settings</h1>
<br />
<hr />
<br />

<div class="row">
    <div class="col-md-3 py-2">
        <a asp-controller="Department" asp-action="Create">
            <div class="card" style="height:150px;">
                <div class="card-body">
                    <div class="form-group">                      
                            <div class="text-center ">
                                <p><i class="fa  fa-user-plus fa-3x"></i></p>
                            </div>
                            <div class="text-center">
                                <label>Add Department</label>
                            </div>                      
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 py-2">
        <a asp-controller="Week" asp-action="Create">
            <div class="card" style="height:150px;">
                <div class="card-body">
                    <div class="form-group">                       
                            <div class="text-center ">
                                <p><i class="fa  fa-calendar-plus-o fa-3x"></i></p>
                            </div>
                            <div class="text-center">
                                <label>Add week number</label>
                            </div>                      
                    </div>
                </div>
            </div>
        </a>
    </div>

</div>