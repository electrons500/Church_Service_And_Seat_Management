@model IEnumerable<ServiceAndSeatManagement.Models.Data.ServiceDBContext.Members>

@{
    ViewData["Title"] = "List of members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div> 
        <h2 class="text-center"><i class="fa fa-users"> Manage members information</i></h2>
</div>
<br />

<div class="row alert alert-info">
    <div class="col-4" style="margin-bottom:10px">
        <!-- Button trigger modal -->
    </div>
   
    <div class="col-3 text-center">
        <a style="margin:auto" asp-controller="Home" asp-action="Index">
            <h6><i class="fa fa-home fa-3x text-success"></i> </h6>
        </a>
    </div>

</div>

<br />

<div class="card">
    <div class="card-header bg-transparent">
        <a class="btn btn-primary" asp-action="Create">
            <i class="fa fa-plus-circle"> Add new member</i>
        </a>
    </div>
    <div class="card-body">
        <table id="membertable"  class="table table-hover table-striped table-bordered dt-responsive nowrap" style="width:100%">
            <thead>
                <tr class="bg-primary text-white">
                    <th>
                        S/No
                    </th>

                    <th>
                        Name of member
                    </th>
                    <th>
                        Residence
                    </th>
                    <th>
                        Telephone number
                    </th>

                    <th>Action</th>
                </tr>
            </thead>

        </table>
    </div>
</div>
<br />
<br />
<br />

@section Scripts{

    <script src="~/js/MembersList.js"></script>

}


