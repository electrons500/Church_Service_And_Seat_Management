@model cloudscribe.Pagination.Models.PagedResult<ServiceAndSeatManagement.Models.Data.ServiceDBContext.Members>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-action="Index" method="get">
    <div>
        <div class="row">
            <div class="col">
                <input type="text" name="SearchString" value="" class="form-control" placeholder="search by member name"/>
            </div>
            <div class="col">
                <button type="submit" name="" class="btn btn-info"><i class="fa fa-search"> Search</i></button>
                <a asp-action="Index">Cancel search</a>
            </div>
           
        </div>
    </div>

</form>

<br />
<br />

<div class="row">
    <div class="col-4">
        <h4>Members</h4>
    </div>
    <div class="col-3">
        <a style="margin:auto" asp-controller="Home" asp-action="Index">
            <h6><i class="fa fa-home text-dark"></i> Click to go back to Menu</h6>
        </a>
    </div>
    <div class="col-5 text-right" style="margin-bottom:10px">
        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"> Add new member</i></a>
    </div>
</div>



<table class="table table-striped">
    <thead>
        <tr class="bg-primary text-white">
            <th>
                Member ID
            </th>

            <th>
               Name
            </th>

            <th>
                Service category
            </th>
            <th>
               Seat number
            </th>



            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.ServiceCategory.ServiceCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatNumber)
            </td>

            <td>
               
                <a asp-controller="membertemperature" asp-action="Create" asp-route-id="@item.MemberId" class="btn btn-danger btn-sm"><i class="fa fa-thermometer-quarter"> Check temperature</i></a>
              
            </td>
        </tr>
}
    </tbody>
</table>

<cs-pager 
      cs-paging-pagenumber="Model.PageNumber"
      cs-paging-totalitems="Model.TotalItems"
      cs-paging-pagesize= "Model.PageSize"
      cs-pagenumber-param="pageNumber"
      asp-controller="Members"
      asp-action="Index"
      cs-pager-li-current-class="page-item active"
      cs-pager-li-other-class="page-item"
      cs-pager-li-non-active-class="page-item disabled"
      cs-pager-link-current-class="page-link"
      cs-pager-link-other-class="page-link"
 
 ></cs-pager>