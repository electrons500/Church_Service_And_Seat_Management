@model cloudscribe.Pagination.Models.PagedResult<ServiceAndSeatManagement.Models.Data.ServiceDBContext.Members>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Member ID
            </th>

            <th>
               Name
            </th>

            <th>
                Service category
            </th>
            <th>
               Seat number
            </th>



            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.ServiceCategory.ServiceCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatNumber)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.MemberId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MemberId">Details</a> |
                <a asp-controller="membertemperature" asp-action="Delete" asp-route-id="@item.MemberId">Check temperature</a>
                @*<a asp-action="Delete" asp-route-id="@item.MemberId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>

<cs-pager 
      cs-paging-pagenumber="Model.PageNumber"
      cs-paging-totalitems="Model.TotalItems"
      cs-paging-pagesize= "Model.PageSize"
      cs-pagenumber-param="pageNumber"
      asp-controller="Members"
      asp-action="Index"
      cs-pager-li-current-class="page-item active"
      cs-pager-li-other-class="page-item"
      cs-pager-li-non-active-class="page-item disabled"
      cs-pager-link-current-class="page-link"
      cs-pager-link-other-class="page-link"
 
 ></cs-pager>